	journaltitle = {Tropical and Subtropical Agroecosystems},
	author = {Sánchez, María Isabel Hernández and Bello, Ana Cecilia Travieso},
	urldate = {2023-05-08},
	date = {2021-01-27},
	langid = {spanish},
	note = {Number: 1},
	keywords = {: percepción, adaptación autónoma, agroecological approach, autonomous adaptation, enfoque agroecológico, perception, policultivo tradicional, traditional polyculture, vulnerabilidad., vulnerability.},
