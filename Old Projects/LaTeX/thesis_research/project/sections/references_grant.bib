	keywords = {Agricultural management, Agroecosystems, Agroforestry, Collective farms, Ecological sustainability, Ecosystem services, Environmental conservation, Organic farming, Shade trees, Sustainable agriculture, agriculture, agroforestry, corridor, ecosystem services, tropical ecology},
}

