	journaltitle = {Coffee Science - {ISSN} 1984-3909},
	author = {Pale-Ezquivel, Ivan and Lagunes, Ricardo Musule and Pineda-López, Maria del Rosario and Alarcón-Gutiérrez, Enrique and Sánchez-Velásquez, Lázaro Rafael},
	urldate = {2023-05-09},
	date = {2023-03-28},
